<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button type="button" class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
    <div class="card">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>{{slug}}</small>
            <br>
            <small>Data de criação: {{date}}</small>
            
            <br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-warning mt-4">Editar Categoria</button></a>
        </div>
    </div>
{{else}}

{{/each}}